<table>
  <tr class="stats">
    <td width="32" valign="top">
      <a href="<%= repo.owner.html_url %>" title="View <%= repo.owner.login %> on GitHub">
        <img class="avatar" src="<%= repo.owner.avatar_url %>" width="20" height="20">
      </a>
    </td>
    <td valign="middle">
      <p>
        <span title="Total Stars"><img height="10" alt="Star" src="/images/star.png" />&nbsp;<%= repo.stargazers_count.comma_separated %></span>
        &nbsp;&nbsp;
        <span title="New Stars"><img height="10" alt="Up" src="/images/up.png" />&nbsp;<%= repo.new_stargazers_count.comma_separated %></span>
      <% if repo.occurrences > 1 %>
        &nbsp;&nbsp;
        <span title="Times Listed"><img height="10" alt="Eyes" src="/images/eye.png" />&nbsp;<%= repo.occurrences.comma_separated %></span>
      <% end %>
      <% if repo.language %>
        &nbsp;&nbsp;
        <span title="Language"><a class="repository-language <%= repo.language_class %>" href="<%= repo.language_trending_url %>" title="View other trending <%= repo.language %> repos on GitHub"><span class="dot"></span><%= repo.language %></a></span>
      <% end %>
      &nbsp;&nbsp;
      <a href="<%= repo.description.translate_url %>" title="Translate"><img height="10" alt="Translate" src="/images/translate.png" /></a>
      </p>
    </td>
  </tr>
  <tr class="about">
    <td width="32" valign="top">
    </td>
    <td valign="top">
      <h3>
        <a href="<%= repo.html_url %>" title="View <%= repo.name %> on GitHub"><%= repo.owner.login %>/<%= repo.name %></a>
      </h3>
      <p>
        <%= repo.classy_description %>
      </p>
    </td>
  </tr>
</table>
